{
  "database": {
    "rules": "database.rules.json"  // Add a rules file for security (e.g., restrict reads/writes by auth)
  },
  "hosting": {
    "public": ".next/static",  // For Next.js static assets if deploying via Firebase Hosting
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "!/__/**",
        "destination": "/index.html"
      }
    ]
  }
}